{
  "name": "@funish/lint-module",
  "version": "0.0.0",
  "description": "The Lint tool chain designed for specification, powered by Funish.",
  "private": true,
  "scripts": {
    "build": "pnpm -r prepack",
    "check": "rome check . --apply-suggested && pnpm rome format . --write",
    "format": "prettier --write --list-different . --ignore-path .gitignore",
    "postinstall": "githooks install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/funish/lint-module.git"
  },
  "keywords": [
    "lint",
    "linter",
    "eslint",
    "stylelint",
    "prettier",
    "commitlint",
    "lint-staged"
  ],
  "author": {
    "name": "Funish",
    "email": "official@funish.net",
    "url": "https://funish.net/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/funish/lint-module/issues"
  },
  "homepage": "https://github.com/funish/lint-module#readme",
  "devDependencies": {
    "@funish/eslint-config": "workspace:*",
    "@funish/githooks": "edge",
    "@funish/githooks-config": "edge",
    "@funish/lint": "workspace:*",
    "@funish/stylelint-config": "workspace:*",
    "@types/eslint": "8.21.1",
    "@types/node": "18.14.1",
    "eslint": "8.34.0",
    "prettier": "2.8.4",
    "rome": "11.0.0",
    "stylelint": "15.2.0",
    "unbuild": "1.1.2"
  }
}
